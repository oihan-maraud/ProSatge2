{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
				<h1><center> Liste des stages par entreprises</center></h1>
			<table class="table">
				<thead>
					<tr>
						<th>
							Entreprises
						</th>
						<th>
							Adresses
						</th>
					</tr>
				</thead>
				<tbody>
					{% for entrepriseCourante in entreprises %}
					<tr class="table table-dark">
						<td width=45%>
							<a href="{{path('projet_stage_enreprise',{nom:entrepriseCourante.nom})}}">{{entrepriseCourante.nom}}</a>
						</td>
						<td width=45%>
							{{entrepriseCourante.adresse}}
						</td >
						<td width=10% class="table table-white">
							<a href="{{path('projet_stage_modifierEntreprise',{id:entrepriseCourante.id})}}">Modifier</a>
						</td>
					</tr>
					{%endfor%}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}
