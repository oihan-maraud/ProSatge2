{% extends 'base.html.twig' %}

{% block body %}

      <h1><center>Ajouter un stage</center></h1>

      <p style="margin : 10px">Ajouter un stage</p>
      <div style="margin : 20px">
        {{form_start(vueFormulaireStage)}}

        {{form_row(vueFormulaireStage.intitule, {'attr' : {'placeholder':"Titre du stage"}})}}

        {{form_row(vueFormulaireStage.description, {'attr' : {'placeholder':"Description du stage"}})}}

        {{form_row(vueFormulaireStage.dateDebut, {'attr' : {'placeholder':"12/04/2021"}})}}

        {{form_row(vueFormulaireStage.duree, {'attr' : {'placeholder':"2 mois et demi"}})}}

        {{form_row(vueFormulaireStage.competencesRequises, {'attr' : {'placeholder':"VBA, Symfony, autonomie et rigueur"}})}}

        {{form_row(vueFormulaireStage.experiencesRequises, {'attr' : {'placeholder':"aucune"}})}}

        {{form_row(vueFormulaireStage.email, {'attr' : {'placeholder':"email@email.com"}})}}

        {{form_row(vueFormulaireStage.entreprise, {'label' : "Entreprise"})}}

        {{form_row(vueFormulaireStage.formation, {'label' : "Le stage est propos√© aux formations suivantes"})}}
        <br>
        <center><button type="submit" class="btn btn-dark" name="button">Enregistrer</button></center>

        {{form_end(vueFormulaireStage)}}
      </div>

{% endblock %}
